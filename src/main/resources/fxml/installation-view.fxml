<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" 
      spacing="20" padding="20" alignment="TOP_CENTER">
    
    <children>
        <!-- Title -->
        <Label text="Zoom Transcriber - Installation" 
               style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
        
        <!-- Status Section -->
        <VBox spacing="10" alignment="CENTER_LEFT" style="-fx-background-color: #f8f9fa; -fx-padding: 15; -fx-background-radius: 5;">
            <children>
                <Label text="Installation Status" style="-fx-font-weight: bold; -fx-font-size: 14px;"/>
                <Label fx:id="statusLabel" text="Checking system..." 
                       style="-fx-text-fill: #6c757d; -fx-font-size: 12px;"/>
            </children>
        </VBox>
        
        <!-- Progress Bar -->
        <ProgressBar fx:id="progressBar" progress="-1.0" prefWidth="600" 
                   style="-fx-accent: #28a745;"/>
        
        <!-- Component Status List -->
        <VBox spacing="10" alignment="CENTER_LEFT">
            <children>
                <Label text="Component Status" style="-fx-font-weight: bold; -fx-font-size: 14px;"/>
                <ListView fx:id="componentsListView" prefHeight="120" prefWidth="600"
                          style="-fx-border-color: #dee2e6; -fx-border-radius: 3;"/>
            </children>
        </VBox>
        
        <!-- Log Area -->
        <VBox spacing="10" alignment="CENTER_LEFT" VBox.vgrow="ALWAYS">
            <children>
                <Label text="Installation Log" style="-fx-font-weight: bold; -fx-font-size: 14px;"/>
                <TextArea fx:id="logArea" prefHeight="150" prefWidth="600" 
                          editable="false" wrapText="true"
                          style="-fx-border-color: #dee2e6; -fx-border-radius: 3; -fx-font-family: monospace; -fx-font-size: 11px;"/>
            </children>
        </VBox>
        
        <!-- Button Section -->
        <HBox spacing="15" alignment="CENTER">
            <children>
                <Button fx:id="checkButton" text="Check Status" prefWidth="120"
                        onAction="#handleCheckAction"
                        style="-fx-background-color: #007bff; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5;"/>
                
                <Button fx:id="installButton" text="Install All" prefWidth="120"
                        onAction="#handleInstallAction"
                        style="-fx-background-color: #28a745; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5;"/>
                
                <Button fx:id="refreshButton" text="Refresh" prefWidth="120"
                        onAction="#handleRefreshAction"
                        style="-fx-background-color: #6c757d; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5;"/>
            </children>
        </HBox>
        
        <!-- Instructions -->
        <VBox spacing="10" alignment="CENTER_LEFT" style="-fx-background-color: #e9ecef; -fx-padding: 15; -fx-background-radius: 5;">
            <children>
                <Label text="Installation Instructions" style="-fx-font-weight: bold; -fx-font-size: 14px;"/>
                <Label text="• This installer will check for and install Java, Ollama, and the Qwen AI model" 
                       wrapText="true" style="-fx-font-size: 12px; -fx-text-fill: #495057;"/>
                <Label text="• Installation may require administrator privileges" 
                       wrapText="true" style="-fx-font-size: 12px; -fx-text-fill: #495057;"/>
                <Label text="• Progress will be shown in the log area above" 
                       wrapText="true" style="-fx-font-size: 12px; -fx-text-fill: #495057;"/>
                <Label text="• Close this window when installation is complete" 
                       wrapText="true" style="-fx-font-size: 12px; -fx-text-fill: #495057;"/>
            </children>
        </VBox>
    </children>
    
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>
</VBox>